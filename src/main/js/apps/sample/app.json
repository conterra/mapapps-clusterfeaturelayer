{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "banner",
            "basemaptoggler",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "map-preload-2D",
            "map-preload-3D",
            "coordinateviewer",
            "toolset",
            "viewmodeswitcher",
            "mapnavigation",
            "toc",
            "custominfo",
            "dn_clusterfeaturelayer"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_clusterfeaturelayer": {
            "ClusterSymbolProvider": {
                "clusterSymbolSize": 25,
                "clusterBackgroundSymbolColor": [
                    200,
                    200,
                    200,
                    0.5
                ],
                "clusterBackgroundBorderColor": [
                    0,
                    0,
                    0,
                    1
                ],
                "clusterBackgroundBorderSize": 0.5,
                "clusterAreaSymbolColor": [
                    255,
                    255,
                    0,
                    0.25
                ],
                "clusterAreaSymbolBorderColor": [
                    0,
                    0,
                    0,
                    1
                ],
                "clusterAreaSymbolBorderSize": 0.5,
                "clusterSingleSymbolColor": [
                    140,
                    177,
                    210,
                    0.75
                ],
                "clusterSingleSymbolBorderColor": [
                    140,
                    177,
                    210,
                    0.35
                ],
                "clusterSingleSymbolBorderSize": 20,
                "spiderfyingLineSize": 0.5,
                "spiderfyingLineColor": [
                    0,
                    0,
                    0,
                    1
                ],
                "spiderfyingCenterColor": [
                    0,
                    0,
                    0,
                    1
                ],
                "spiderfyingCenterSize": 5,
                "labelColor": [
                    0,
                    0,
                    0,
                    1
                ],
                "labelHaloColor": [
                    255,
                    255,
                    255,
                    1
                ],
                "labelFontSize": "10pt",
                "labelHaloSize": 1,
                "labelFontFamily": "Arial"
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://www.conterra.de"
            }
        },
        "basemaptoggler": {
            "Config": {
                "nextBasemap": "hybrid"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "customInfoTool",
                    "activateOnStartup": true,
                    "title": "Information",
                    "tooltip": "Information",
                    "iconClass": "icon-custom-info-info",
                    "toolClass": "ctInfo",
                    "togglable": true,
                    "widgetSettings": {
                        "content": "This app shows the functionality of the Cluster Feature Layer bundle that draws a Cluster Feature Layer and activates a Spiderfying.",
                        "window": {
                            "title": "Information",
                            "marginBox": {
                                "w": 300,
                                "h": 160,
                                "l": 20,
                                "b": 60
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": false,
                            "maximizable": false,
                            "resizable": false
                        }
                    }
                }
            ]
        },
        "map-init": {
            "Config": {
                "map": {
                    "layers": [
                        {
                            "id": "clusterfeaturelayer",
                            "title": "Köln",
                            "type": "CLUSTER_FEATURE_LAYER",
                            "elevationInfo": {
                                "mode": "relative-to-scene"
                            },
                            "layers": [
                                {
                                    "id": "koeln",
                                    "url": "https://services.conterra.de/arcgis/rest/services/common/koeln/MapServer",
                                    "sublayers": [
                                        {
                                            "id": "1",
                                            "title": "Veranstaltungsorte",
                                            "visible": true,
                                            "popupTemplate": {
                                                "title": "{NAME}",
                                                "content": "<div>{ADRESSE} {HAUSNR}, {POSTLEITZAHL} {STADTTEIL}</div>"
                                            }
                                        },
                                        {
                                            "id": "2",
                                            "title": "Spiel- und Sportplätze",
                                            "visible": true,
                                            "popupTemplate": {
                                                "title": "{Spielplatzname}",
                                                "content": "<div>Viertel: {Stadtviertel}, Stadtteil: {Stadtteil}</div>"
                                            }
                                        },
                                        {
                                            "id": "3",
                                            "title": "Sehenswürdigkeiten",
                                            "visible": true,
                                            "popupTemplate": {
                                                "title": "{NAME}",
                                                "content": "<div>{ADRESSE} {HAUSNR}, {POSTLEITZAHL} {STADTTEIL}</div>"
                                            }
                                        },
                                        {
                                            "id": "5",
                                            "title": "Schulen",
                                            "visible": false,
                                            "popupTemplate": {
                                                "title": "{NAME}",
                                                "content": "<div>{ADRESSE} {HAUSNR}, {POSTLEITZAHL} {STADTTEIL}</div>"
                                            }
                                        },
                                        {
                                            "id": "6",
                                            "title": "Museen",
                                            "visible": false,
                                            "popupTemplate": {
                                                "title": "{NAME}",
                                                "content": "<div>{ADRESSE} {HAUSNR}, {POSTLEITZAHL} {STADTTEIL}</div>"
                                            }
                                        },
                                        {
                                            "id": "7",
                                            "title": "Bibliotheken",
                                            "visible": false,
                                            "popupTemplate": {
                                                "title": "{NAME}",
                                                "content": "<div>{ADRESSE} {HAUSNR}, {POSTLEITZAHL} {STADTTEIL}</div>"
                                            }
                                        }
                                    ]
                                }
                            ],
                            "visible": true,
                            "minScale": 500000,
                            "maxScale": 0,
                            "listMode": "show",
                            "opacity": 1,
                            "outFields": [
                                "*"
                            ],
                            "options": {
                                "objectIdField": "objectid",
                                "clusterDistance": 100,
                                "spiderfyingDistance": 1,
                                "returnLimit": 1000,
                                "maxClusterScale": 0,
                                "symbolBaseSize": 25,
                                "showClusterGrid": true,
                                "showClusterGridCounts": true,
                                "showClusterGridBackground": false,
                                "showClusterArea": true,
                                "showClusterSize": true,
                                "showClusterPopup": false,
                                "showSpiderfying": true,
                                "zoomOnClusterClick": true,
                                "useDefaultSymbolForFeatures": false,
                                "clusterLabelOffset": -4
                            }
                        }
                    ],
                    "basemap": "streets-vector",
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "scale": 288895.277144,
                    "center": {
                        "x": 780591.7692457888,
                        "y": 6610262.2893272545,
                        "spatialReference": {
                            "wkid": 3857
                        }
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "autumn"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool",
                            "viewmodeSwitcherTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
